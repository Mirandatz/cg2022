{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc build active file",
			"command": "/usr/bin/gcc",
			"args": [
				"-fdiagnostics-color=always",
				"-std=c17",
				"-lm",
				"-lX11",
				"-pedantic",
				"-Wextra",
				"-Wall",
				"-Werror",
				"-fsanitize=address,undefined",
				"-g",
				"${workspaceFolder}/src/main.c",
				"-o",
				"${workspaceFolder}/src/main.o"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/gcc"
		}
	]
}
